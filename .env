import React, { useState } from "react";
import { SafeAreaView, Text, Button, ScrollView } from "react-native";
import { OPENAI_API_KEY } from "@env";

export default function App() {
  const [menu, setMenu] = useState("");

  const generarMenu = async () => {
    try {
      const response = await fetch("https://api.openai.com/v1/chat/completions", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "Authorization": `Bearer ${OPENAI_API_KEY}`,
        },
        body: JSON.stringify({
          model: "gpt-4o-mini",
          messages: [{ role: "user", content: "Crea un menú mediterráneo con desayuno, comida y cena." }],
        }),
      });

      const data = await response.json();
      setMenu(data.choices[0].message.content);
    } catch (error) {
      setMenu("Error al generar el menú");
    }
  };

  return (
    <SafeAreaView style={{ flex: 1, padding: 20 }}>
      <Button title="Generar menú mediterráneo" onPress={generarMenu} />
      <ScrollView style={{ marginTop: 20 }}>
        <Text>{menu}</Text>
      </ScrollView>
    </SafeAreaView>
  );
}

